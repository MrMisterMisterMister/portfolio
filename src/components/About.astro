---
import Section from "@/components/layout/Section.astro";
import Container from "@/components/layout/Container.astro";
import Stack from "@/components/layout/Stack.astro";
import Grid from "@/components/layout/Grid.astro";
import Card from "@/components/ui/Card.astro";
import CardContent from "@/components/ui/CardContent.astro";
import FadeIn from "@/components/animations/FadeIn";
import { getAge, personalInfo } from "@/lib/personalData";
---

<Section id="about">
    <Stack gap="base">
        <FadeIn client:load delay={0.1} duration={0.5}>
            <Stack gap="md" align="center" as="header">
                <h2 class="text-3xl font-bold">About Me</h2>
            </Stack>
        </FadeIn>

        <Container size="xl">
            <Stack gap="xl">
                <FadeIn client:load delay={0.2} duration={0.6}>
                    <Card>
                        <CardContent class="pt-6">
                            <Stack gap="base" as="article">
                                <h4 class="text-lg font-semibold">Hello there.</h4>
                                <p class="text-lg leading-relaxed text-muted-foreground">
                                    I'm {getAge()} years of age, and a {
                                        personalInfo.occupation
                                    } in my 4th year. I always try doing what I feel like doing, but most of
                                    the times, that is not possible.
                                </p>
                                <p class="text-lg leading-relaxed text-muted-foreground">
                                    At the moment, I'm focused on expanding my skills in IoT and embedded
                                    systems, while also exploring opportunities in Full-Stack Development.
                                </p>
                                <p class="text-lg leading-relaxed text-muted-foreground">
                                    Feel free to reach out to me if you have any questions or just want to chat.
                                </p>
                            </Stack>
                        </CardContent>
                    </Card>
                </FadeIn>

                <FadeIn client:load delay={0.4} duration={0.6}>
                    <Container size="max">
                        <Grid columns={3} gap="xs" as="nav" class="social-links-grid">
                <a
                    href="https://www.linkedin.com/sly-moertanom"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="LinkedIn"
                    class="social-icon-link linkedin-link"
                >
                    <div class="social-icon-wrapper">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="social-icon"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                d="M20.447 20.452h-3.554V14.83c0-1.338-.026-3.061-1.866-3.061-1.868 0-2.153 1.46-2.153 2.966v5.717H8.423V9h3.574v1.561h.05c.497-.94 1.71-1.935 3.52-1.935 3.764 0 4.457 2.478 4.457 5.698v6.128zM5.337 7.433a2.07 2.07 0 1 1 0-4.141 2.07 2.07 0 0 1 0 4.141zM7.124 20.452H3.55V9h3.574v11.452z"
                            ></path>
                        </svg>
                    </div>
                    <span class="social-icon-label">LinkedIn</span>
                </a>

                <a
                    href="https://github.com/mrmistermistermister"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="GitHub"
                    class="social-icon-link github-link"
                >
                    <div class="social-icon-wrapper">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="social-icon"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                    </div>
                    <span class="social-icon-label">GitHub</span>
                </a>

                <a
                    href="https://discord.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Discord"
                    class="social-icon-link discord-link"
                >
                    <div class="social-icon-wrapper">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="social-icon"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                d="M20.317 4.37a19.791 19.791 0 00-4.885-1.515.074.074 0 00-.079.037c-.21.375-.444.865-.608 1.25a18.27 18.27 0 00-5.487 0 12.64 12.64 0 00-.617-1.25.077.077 0 00-.079-.037A19.736 19.736 0 003.677 4.37a.07.07 0 00-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 00.031.057 19.9 19.9 0 005.993 3.03.078.078 0 00.084-.028 14.09 14.09 0 001.226-1.994.076.076 0 00-.041-.106 13.107 13.107 0 01-1.872-.892.077.077 0 01-.008-.128 10.2 10.2 0 00.372-.292.074.074 0 01.077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 01.078.01c.12.098.246.198.373.292a.077.077 0 01-.006.127 12.299 12.299 0 01-1.873.892.077.077 0 00-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 00.084.028 19.839 19.839 0 006.002-3.03.077.077 0 00.032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 00-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
                            ></path>
                        </svg>
                    </div>
                    <span class="social-icon-label">Discord</span>
                </a>
                        </Grid>
                    </Container>
                </FadeIn>
            </Stack>
        </Container>
    </Stack>
</Section>
